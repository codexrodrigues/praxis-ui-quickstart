{
  "hosting": {
    "public": "dist/praxis-ui-quickstart/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/assets/app-config.json",
        "headers": [
          { "key": "Cache-Control", "value": "no-store, max-age=0" },
          { "key": "Content-Type", "value": "application/json; charset=utf-8" }
        ]
      },
      {
        "source": "/assets/app-config.prod.json",
        "headers": [
          { "key": "Cache-Control", "value": "no-store, max-age=0" },
          { "key": "Content-Type", "value": "application/json; charset=utf-8" }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
